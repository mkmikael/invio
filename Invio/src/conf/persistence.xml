<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="InvioPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>invio.entidade.Area</class>
    <class>invio.entidade.Orientacao</class>
    <class>invio.entidade.Perfil</class>
    <class>invio.entidade.Plano</class>
    <class>invio.entidade.Curriculo</class>
    <class>invio.entidade.Edital</class>
    <class>invio.entidade.Login</class>
    <class>invio.entidade.Unidade</class>
    <class>invio.entidade.Livro</class>
    <class>invio.entidade.Programa</class>
    <class>invio.entidade.Periodico</class>
    <class>invio.entidade.Instituicao</class>
    <class>invio.entidade.Qualis</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/invio?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="inviousr"/>
      <property name="javax.persistence.jdbc.password" value="inviousr"/>
      <property name="eclipselink.ddl-generation" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
