<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="InvioPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <non-jta-data-source/>
    <class>invio.entidade.Curriculo</class>
    <class>invio.entidade.Unidade</class>
    <class>invio.entidade.Instituicao</class>
    <class>invio.entidade.Area</class>
    <class>invio.entidade.Programa</class>
    <class>invio.entidade.Login</class>
    <class>invio.entidade.Producao</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.username" value="inviousr"/>
      <property name="hibernate.connection.password" value="inviousr"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/invio"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
